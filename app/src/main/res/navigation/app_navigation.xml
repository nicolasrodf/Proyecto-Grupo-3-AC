<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/listPlacesFragment">
    <fragment
        android:id="@+id/listPlacesFragment"
        android:name="com.app.projectgroup3.ui.list_places.ListPlacesFragment"
        android:label="ListPlacesFragment"
        tools:layout="@layout/fragment_list_places">
        <action
            android:id="@+id/action_listPlacesFragment_to_detailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.app.projectgroup3.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="place"
            app:argType="com.app.projectgroup3.model.Place" />
    </fragment>
</navigation>